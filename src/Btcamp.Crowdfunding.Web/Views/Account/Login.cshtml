@model AccountLoginViewModel


@{
    ViewBag.Title = "用户登陆";

    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
}
@section css{
    @Styles.Render("~/login/css")
}

<div class="container content" style="margin-top: 100px">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 col-sm-12">
            <form class="form-horizontal" action="@Url.Action("Login")" method="post" novalidate="novalidate">
                <div class="reg-header">
                    <h2>一米好地账号登录</h2>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.LoginName, new { @class = "col-md-3 control-label" })
                    <div class="input-group col-md-9">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        @Html.TextBoxFor(m => m.LoginName, new { placeholder = "请输入用户名", @class = "form-control input-lg" })
                    </div>
                    @Html.ValidationMessageFor(e => e.LoginName, string.Empty, new { @class = "col-md-offset-4" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Pwd, new { @class = "col-md-3 control-label" })
                    <div class="input-group col-md-9">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        @Html.PasswordFor(m => m.Pwd, new { placeholder = "请输入密码", @class = "form-control input-lg" })
                    </div>
                    @Html.ValidationMessageFor(e => e.Pwd, string.Empty, new { @class = "col-md-offset-4" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ValidateCode, new { @class = "col-md-3 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.ValidateCode, new { placeholder = "请输入验证码", @class = "form-control input-lg" })
                    </div>
                    <div class="col-md-4">
                        <img id="validCode" onclick="this.src = '@Url.Action("Code")?' + Math.random()" src="@Url.Action("Code")" style="cursor: pointer;" title="点击刷新验证码" alt="点击刷新验证码">
                    </div>
                    @Html.ValidationMessageFor(e => e.ValidateCode, string.Empty, new { @class = "col-md-offset-4" })
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <div class="row">
                            <div class="col-sm-6">
                                @*<label><input type="checkbox" id="chkRemember">记住密码</label>*@
                            </div>
                            <div class="col-sm-6">
                                <label><a href="../member/forgotpwd.aspx.htm">忘记密码？</a></label>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <div class="row">
                            <div class="col-sm-6">
                                <button class="btn btn-primary btn-u-lg btn-block" type="submit">登录</button>
                            </div>
                            <div class="col-sm-6">
                                <a class="btn btn-default btn-u-lg btn-block" href="@Url.Action("Register")">注册</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>

</div>
@section script{
    @Scripts.Render("~/login/scripts")
}
