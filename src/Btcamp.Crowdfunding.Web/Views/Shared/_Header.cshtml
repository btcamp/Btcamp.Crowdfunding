                            </ul>
                        }
                        else
                        {
                            <a class="btn-login" href="@Url.Action("Login","Account")"><img src="/content/images/icon-lock.png">登录</a>
                            <a class="btn-register" href="@Url.Action("Register","Account")">注册</a>
                        }
                    }

