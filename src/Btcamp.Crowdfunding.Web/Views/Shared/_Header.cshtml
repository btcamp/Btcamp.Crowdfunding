@{
    AccountLoginStatusModel login = null;
    if (Request.IsAuthenticated)
    {
        login = HttpContext.Current.Items["currentUser"] as AccountLoginStatusModel;
    }
}

<header class="navbar navbar-static-top">
    <div class="container">
        <div class="navbar-header">
            <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="Default.aspx.htm" class="navbar-brand"><img src="/content/images/logo.png"></a>
        </div>
        <nav class="navbar-collapse bs-navbar-collapse collapse" role="navigation" aria-expanded="true">
            <ul class="nav navbar-nav navbar-right">
                <li id="liHome" class="active"><a href="/">首页</a></li>
                <li id="liInvest"><a href="Project/ProjectList.htm">投资项目</a></li>
                <li id="liGuide"><a href="guide-3.aspx.htm">新手指南</a></li>
                <li id="liAbout"><a href="about-2.aspx.htm">关于我们</a></li>
                <li class="lr-box">
                    @{
                        if (Request.IsAuthenticated)
                        {
                            @*<a class="btn-login" href="@Url.Action("center","Account")"><img src="/content/images/icon-lock.png">@login.Name</a>*@


                            <div class="user-info" data-toggle="dropdown">
                                <img class="u-icon" src="/content/images/icon-username.png">
                                <span class="u-name">@login.Name</span>
                                <div class="u-triangle"></div>
                            </div>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
